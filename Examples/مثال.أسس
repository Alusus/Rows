استخدم مـتم؛

صنف سـيارات {
@notnull
@pk
@Integer
    عرف  id: int؛

@VarChar
@defult["'My Car'" ]
    عرف name: String؛

@Float
    عرف price: float؛

    صـفوف.توابع_المعطيات[نـص("سـيارات") , نـص("mycars") , سـيارات~ast ]
}

عرف اسم_قاعدة_البيانات: نـص = "alusus"؛
عرف اسم_المستخدم : نـص="alusus"؛
عرف كلمة_السر : نـص="alusus"؛
عرف عنوان_الخادم : نـص="0.0.0.0"؛
عرف اتصال: DbConBuilder؛
اتصال.setDBName(اسم_قاعدة_البيانات)؛
اتصال.setUserName(اسم_المستخدم)؛
اتصال.setPassword(كلمة_السر)؛
اتصال.setServer(عنوان_الخادم)؛
اتصال.setDbConType(0)؛


// صـفوف.ولد_بناء[سـيارات~ast , نـص("سـيارات")]
// بناء(اتصال)؛


عرف س : سـيارات؛

عرف ي: مـصفوفة[سـيارات]

س.ضع_اتصال_قب(اتصال)؛

عرف ع: صحيح = 1؛
لكل ع = 1، ع < 30، ع = ع+1 {
    س.id=ع
    س.name=String("'Car ") + ع + String("'")؛
    س.price = 200.0 * ع؛
    س.احفظ_التغيرات()؛
}

س.id=900؛
س.name=String("'alusus Car'")؛
س.price=2500000.50؛

س.احفظ_التغيرات()؛


//ي=سـيارات.ولد_شرط[not (price $ (200  , 500)) and  id > 2 ].اجلب_المعطيات()؛
ي = سـيارات.where[(price < 1000 أو price > 5000) و id > 2].getData()؛
عرف ك: صحيح = 0؛

طـرفية.اطبع("\ج")؛
طـرفية.اطبع("\ج")؛
لكل ك = 0, ك < ي.هات_الطول() ,ك = ك+1 {
    طـرفية.اطبع(ي(ك).id)؛
    طـرفية.اطبع("  ")؛
    طـرفية.اطبع(ي(ك).name)؛
    طـرفية.اطبع("  ")؛
    طـرفية.اطبع(ي(ك).price)؛
    طـرفية.اطبع("\ج")؛
}

سـيارات.ولد_شرط[id=20 ]

