اشمل "Rows.alusus"؛
عرف صـفوف: لقب Rows؛
@دمج وحدة صـفوف {
    عرف مـعطيات_الاتصال: لقب ConnectionParams؛
    @دمج صنف مـعطيات_الاتصال {
        عرف اسم_قاعدة_البيانات: لقب dbName؛
        عرف اسم_المستخدم: لقب userName؛
        عرف كلمة_السر: لقب password؛
        عرف عنوان_الخادم: لقب host؛
        عرف المنفذ: لقب port؛
    }

    عرف سـائق_مايسكويل: لقب MysqlDriver؛
    عرف سـائق_بوستغرس: لقب PostgresqlDriver؛

    عرف إنـشاء_جدول: لقب CreateTable؛
    @دمج صنف إنـشاء_جدول {
        عرف الاسم: لقب name؛
        عرف جديد_فقط: لقب notExists؛
        عرف الحقول: لقب columns؛
        عرف الفهرس_الرئيسي: لقب primaryKey؛
        عرف فهارس_الوصل: لقب foreignKeys؛
    }

    عرف حـذف: لقب Delete؛
    @دمج صنف حـذف {
        عرف الجدول: لقب table؛
        عرف الشرط: لقب condition؛
    }

    عرف إدخـال: لقب Insert؛
    @دمج صنف إدخـال {
        عرف الجدول: لقب table؛
        عرف البيانات: لقب data؛
        عرف الحقول: لقب columns؛
    }

    عرف جـلب: لقب Select؛
    @دمج صنف جـلب {
        عرف الجدول: لقب table؛
        عرف الحقول: لقب fields؛
        عرف الشرط: لقب condition؛
        عرف الترتيب: لقب orderBy؛
    }

    عرف تـحديث: لقب Update؛
    @دمج صنف تـحديث {
        عرف الجدول: لقب table؛
        عرف البيانات: لقب data؛
        عرف الحقول: لقب columns؛
        عرف الشرط: لقب condition؛
    }

    عرف حـقل: لقب Column؛
    @دمج صنف حـقل {
        عرف الصنف: لقب dataType؛
        عرف إلزامي: لقب notNull؛
        عرف فريد: لقب unique؛
        عرف القيمة_الافتراضية: لقب default؛
        عرف التحقق: لقب check؛
    }

    عرف فـهرس_وصل: لقب ForeignKey؛

    عرف عـدد_صحيح: لقب Integer؛
    عرف صـحيح_كبير: لقب BitInteger؛
    عرف صـحيح_صغير: لقب SmallInteger؛
    عرف صـحيح_ضئيل: لقب TinyInteger؛
    عرف عـدد_حقيقي: لقب Real؛
    عرف عـدد_عائم: لقب Float؛
    عرف عـدد_عشري: لقب Decimal؛
    عرف إكـسمل: لقب Xml؛
    عرف مـحارف_مرنة: لقب VarChar؛
    عرف مـحارف_محددة: لقب CharType؛
    عرف نـص_كبير: لقب Text؛
    عرف تـاريخ: لقب Date؛

    عرف قـاعدة_بيانات: لقب Db؛
    @دمج صنف قـاعدة_بيانات {
        عرف أمتصل: لقب isConnected؛
        عرف هات_آخر_خطأ: لقب getLastError؛
        عرف نفذ: لقب exec؛
    }

    ماكرو توابع_المعطيات [اسم_الصف, اسم_الجدول, الأب] {
        عرف قب: لقب db؛
        عرف اجلب_المعطيات: لقب getData؛
        عرف احفظ_التغيرات: لقب saveData؛
        عرف احذف_بيانات: لقب deleteRowData؛
        عرف عدل_البيانات: لقب updateData؛
        عرف ولد_شرط: لقب where؛
        عرف ولد_تعديل_متغيرات: لقب updateDataSet؛
    }

    عرف إنشاء_تلقائي: لقب autoCreate؛
    ماكرو ولد_بناء [ الأب ,اسم_الجدول] {
        صـفوف.إنشاء_تلقائي[الأب ,اسم_الجدول]؛
        عرف بناء: لقب create؛
    }
}

