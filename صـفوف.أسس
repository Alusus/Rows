        عرف جديد_فقط: لقب notExists؛
        عرف الحقول: لقب columns؛
        عرف الفهرس_الرئيسي: لقب primaryKey؛
        عرف فهارس_الوصل: لقب foreignKeys؛
    }

    عرف حـذف: لقب Delete؛
    @دمج صنف حـذف {
        عرف الجدول: لقب table؛
        عرف الشرط: لقب condition؛
    }

    عرف إدخـال: لقب Insert؛
    @دمج صنف إدخـال {
        عرف الجدول: لقب table؛
        عرف البيانات: لقب data؛
        عرف الحقول: لقب columns؛
    }

    عرف جـلب: لقب Select؛
    @دمج صنف جـلب {
        عرف الجدول: لقب table؛
        عرف الحقول: لقب fields؛
        عرف الشرط: لقب condition؛
        عرف الترتيب: لقب orderBy؛
    }

    عرف تـحديث: لقب Update؛
    @دمج صنف تـحديث {
        عرف الجدول: لقب table؛
        عرف البيانات: لقب data؛
        عرف الحقول: لقب columns؛
        عرف الشرط: لقب condition؛
    }

    عرف حـقل: لقب Column؛
    @دمج صنف حـقل {
        عرف الصنف: لقب dataType؛
        عرف إلزامي: لقب notNull؛
        عرف فريد: لقب unique؛
        عرف القيمة_الافتراضية: لقب default؛
        عرف التحقق: لقب check؛
    }

    عرف فـهرس_وصل: لقب ForeignKey؛

    عرف اسـتعلام: لقب Query؛
    @دمج صنف اسـتعلام {
        عرف رتب: لقب order؛
        عرف حيثما: لقب where؛
        عرف حدث: لقب update؛
        عرف اجلب: لقب select؛
        عرف احفظ: لقب save؛
        عرف احذف: لقب delete؛
    }

    عرف مـهيكل: لقب SchemaBuilder؛
    @دمج صنف مـهيكل {
        عرف أنشئ: لقب create؛
    }

    عرف قـاعدة_بيانات: لقب Db؛
    @دمج صنف قـاعدة_بيانات {
        عرف هيئ: لقب init؛
        عرف أمتصل: لقب isConnected؛
        عرف هات_آخر_خطأ: لقب getLastError؛
        عرف نفذ: لقب exec؛
        عرف من: لقب from؛
        عرف احفظ: لقب save؛
        عرف مهيكل: لقب schemaBuilder؛
    }

    // أصناف البيانات.
    عرف عـدد_صحيح: لقب Integer؛
    عرف صـحيح_كبير: لقب BigInteger؛
    عرف صـحيح_صغير: لقب SmallInteger؛
    عرف صـحيح_ضئيل: لقب TinyInteger؛
    عرف ثـنائية: لقب Boolean؛
    عرف عـدد_حقيقي: لقب Real؛
    عرف عـدد_عائم: لقب Float؛
    عرف عـدد_عشري: لقب Decimal؛
    عرف إكـسمل: لقب Xml؛
    عرف مـحارف_مرنة: لقب VarChar؛
    عرف مـحارف_محددة: لقب CharType؛
    عرف نـص_كبير: لقب Text؛
    عرف تـاريخ: لقب Date؛
    عرف تـاريخ_ووقت: لقب DateTime؛
    عرف مـعرف_عالمي: لقب Uuid؛

    ماكرو عرف_أساسيات_الجدول {
        ‏صـفوف.define_model_essentials[]؛
        عرف قب: لقب db؛
        عرف احفظ: لقب save؛
        عرف احذف: لقب delete؛
    }

    عرف ترجمات_المبدلات: لقب modifierKeywordTranslations؛
    ترجمات_المبدلات.{
        // مبدلات الجداول والحقول
        هذا(نـص("جدول")) = نـص("model")؛
        هذا(نـص("حقل")) = نـص("column")؛
        هذا(نـص("فهرس_رئيسي")) = نـص("primaryKey")؛
        هذا(نـص("فهرس_وصل")) = نـص("foreignKey")؛
        هذا(نـص("إلزامي")) = نـص("notNull")؛
        هذا(نـص("فريد")) = نـص("unique")؛
        هذا(نـص("مبدئي")) = نـص("default")؛
        هذا(نـص("تحقق")) = نـص("check")؛
        // أصناف البيانات
        هذا(نـص("عـدد_صحيح")) = نـص("Integer")؛
        هذا(نـص("صـحيح_كبير")) = نـص("BigInteger")؛
        هذا(نـص("صـحيح_صغير")) = نـص("SmallInteger")؛
        هذا(نـص("صـحيح_ضئيل")) = نـص("TinyInteger")؛
        هذا(نـص("ثـنائية")) = نـص("Boolean")؛
        هذا(نـص("عـدد_حقيقي")) = نـص("Real")؛
        هذا(نـص("عـدد_عائم")) = نـص("Float")؛
        هذا(نـص("عـدد_عشري")) = نـص("Decimal")؛
        هذا(نـص("إكـسمل")) = نـص("Xml")؛
        هذا(نـص("مـحارف_مرنة")) = نـص("VarChar")؛
        هذا(نـص("مـحارف_محددة")) = نـص("CharType")؛
        هذا(نـص("نـص_كبير")) = نـص("Text")؛
        هذا(نـص("تـاريخ")) = نـص("Date")؛
        هذا(نـص("تـاريخ_ووقت")) = نـص("DateTime")؛
    }؛

    عرف أخـطاء: لقب Errors؛
    @دمج وحدة أخـطاء {
        عرف _قب_غير_مهيأة_: لقب DB_NOT_INITIALIZED؛
        عرف _قب_غير_متصلة_: لقب DB_NOT_CONNECTED؛
        عرف _خطأ_سكول_: لقب SQL_ERROR؛
