اشمل "../بناء_تلقائي";



صنف MyCars
{

@notnull
@pk
@Integer
عرف  id :int;
@VarChar
@defult["'My Car'" ]
عرف name:String;
@Float
عرف price:float;

بناء_تلقائي.توابع_المعطيات[String("MyCars") , String("mycarTable") , MyCars~ast ]


}

عرف DbName : String="testdb";

عرف UserName : String="user12";

عرف Password : String="Qwerty231@#!";

عرف server : String="localhost";




عرف DbsCon :  DbConBuilder.DbConBuilder;

DbsCon.setDBName(DbName);

DbsCon.setUserName(UserName);

DbsCon.setPassword(Password);

DbsCon.setServer(server);
DbsCon.setDbConType(0);


باني_جدول.ولد_بناء[MyCars~ast , String("MyCars")]
بناء(DbsCon);


عرف س : MyCars;

عرف ي: Array[MyCars]

س.ضع_اتصال_قب(DbsCon);

عرف i : int=1
for i=1 , i<30 , i=i+1
{
    س.id=i
    س.name=String("'Car ") + i + String("'");
    س.price = 200.0 * i

    س.احفظ_التغيرات();
}

س.id=900;
س.name=String("'alusus Car'");
س.price=2500000.50;

س.احفظ_التغيرات();


ي=MyCars.ولد_شرط[not (price $ (200  , 500)) and  id > 2 ].اجلب_المعطيات();
عرف k: int=0;

Console.print("\n");
Console.print("\n");
for k=0 , k<ي.getLength() , k=k+1
{
Console.print(ي(k).id);
Console.print("  ");
Console.print(ي(k).name);
Console.print("  ");
Console.print(ي(k).price);
Console.print("\n");
}

MyCars.ولد_شرط[id=20 ]

MyCars.ولد_تعديل_متغيرات[(price=90 , name="BMW") ];

ي=س.اجلب_المعطيات();
Console.print("\n");
Console.print("\n");
for k=0 , k<ي.getLength() , k=k+1
{
Console.print(ي(k).id);
Console.print("  ");
Console.print(ي(k).name);
Console.print("  ");
Console.print(ي(k).price);
Console.print("\n");
}
