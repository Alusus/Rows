اشمل "مـتم/متم"؛
اشمل "AutoBuild";
اشمل "TableBuilder";
اشمل "Srl/refs";
اشمل "Srl/System";
اشمل "Srl/Console";
اشمل "Core/Data";
اشمل "Spp";
عرف بناء_تلقائي: لقب AutoBuild؛
@دمج وحدة بناء_تلقائي {
    عرف توليد_التوابع: لقب getDataFunc؛
   ماكرو توابع_المعطيات [اسم_الصف , اسم_الجدول , الأب ]
   {

      بناء_تلقائي.توليد_التوابع[اسم_الصف , اسم_الجدول , الأب]
     عرف _شرط: لقب _Where؛
     عرف _تحديث: لقب _Update؛
     عرف ضع_اتصال_قب: لقب setDbCon؛
     عرف اجلب_اتصال_قب: لقب getDbCon؛
     عرف اجلب_المعطيات: لقب getData؛
     عرف احفظ_التغيرات: لقب saveData؛
     عرف احذف_بيانات: لقب deleteRowData؛
     عرف عدل_البيانات: لقب updateData؛
     عرف ولد_شرط: لقب where؛
     عرف ولد_تعديل_متغيرات: لقب updateDataSet؛
   }}
   عرف باني_جدول : لقب TableBuilder;
   @دمج وحدة باني_جدول {
      عرف أنشاء_تلقائي: لقب autoCreate؛
   ماكرو ولد_بناء [ الأب ,اسم_الجدول]
   {

      باني_جدول.أنشاء_تلقائي[ الأب ,اسم_الجدول]
     عرف بناء: لقب create؛
   }
}


